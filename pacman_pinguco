#!/usr/bin/env bash

# ANSI color scheme script featuring PACMAN
# Author: pfh
# Source: http://crunchbang.org/forums/viewtopic.php?pid=144481#p144481 
# Initializing procedure by lolilolicon

	f=3 b=4
	for j in f b; do
	  for i in {0..7}; do
	    printf -v $j$i %b "\e[${!j}${i}m"
	  done
	done
	bld=$'\e[1m'
	rst=$'\e[0m'
	inv=$'\e[7m'

initializeANSI()
{
 esc=""

  blackf="${esc}[31m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"

  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}


initializeANSI

cat << EOF
$rst
                                                          ${boldon}${blackf} â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}
                                                          ${boldon}${blackf}â–ˆâ–ˆ${reset}â–ˆâ–ˆ${reset}${bluef}â–ˆâ–ˆ${reset}${boldon}${blackf}â–ˆâ–ˆ${reset}${bluef}â–ˆâ–ˆ${reset}
                                                          ${boldon}${blackf}â–ˆâ–ˆ${reset}â–ˆâ–ˆ${bluef}â–ˆâ–ˆ${reset}${boldon}${blackf}â–ˆâ–ˆ${reset}${bluef}â–ˆâ–ˆ${reset}
                                                          ${boldon}${blackf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}${purplef}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}
 $f3  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„                $f1  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„    $f6  â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„      ${boldon}${blackf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${blackf}â–ˆâ–ˆ${reset}
 $f3â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–€               $f1â–„$f7â–ˆâ–€â–ˆ$f1â–ˆâ–ˆ$f7â–ˆâ–€â–ˆ$f1â–ˆâ–ˆâ–„  $f6â–„â–ˆâ–ˆ$f7â–ˆâ–€â–ˆ$f6â–ˆâ–ˆ$f7â–ˆâ–€â–ˆ$f6â–„  ${boldon}${blackf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${boldon}${blackf}â–ˆâ–ˆ${reset}
 $f3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€      $f7â–„â–„  â–„â–„  â–„â–„   $f1â–ˆ$f7â–„â–„â–ˆ$f1â–ˆâ–ˆ$f7â–„â–„â–ˆ$f1â–ˆâ–ˆâ–ˆ  $f6â–ˆâ–ˆâ–ˆ$f7â–ˆâ–„â–„$f6â–ˆâ–ˆ$f7â–ˆâ–„â–„$f6â–ˆ  ${boldon}${blackf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${boldon}${blackf}â–ˆâ–ˆ${reset}
 $f3â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„      $f7â–€â–€  â–€â–€  â–€â–€   $f1â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  $f6â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ  ${boldon}${blackf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${boldon}${blackf}â–ˆâ–ˆ${reset}
 $f3â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„â–„               $f1â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ  $f6â–ˆâ–ˆâ–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–ˆâ–ˆ    ${boldon}${blackf}â–ˆâ–ˆâ–ˆâ–ˆ${reset}â–ˆâ–ˆâ–ˆâ–ˆ${boldon}${blackf}â–ˆâ–ˆ${reset}
 $f3  â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€                $f1â–€   â–€  â–€   â–€  $f6â–€   â–€  â–€   â–€   ${boldon}${blackf}â–ˆâ–ˆâ–ˆ${reset}${purplef}â–ˆâ–ˆâ–ˆ   â–ˆâ–ˆâ–ˆâ–ˆ${reset}
$rst
EOF
